<div class="mx-auto pt-4" style="width: 400px">
<!-- Default form login -->
<%= form_tag url_for(action: 'create'), method: "post", class: "text-center border border-light p-5" do %>

    <p class="h4 mb-4">Sign in</p>

    <!-- Email -->
    <%= text_field_tag 'email', nil, type: "email", id: "defaultLoginFormEmail", class: "form-control mb-4", placeholder: "E-mail" %>

    <!-- Password -->
    <%= text_field_tag 'password', nil, type: "password", id: "defaultLoginFormPassword", class: "form-control mb-4", placeholder: "Password" %>

    <!-- Sign in button -->
    <%= submit_tag "Sign in", class: "btn btn-info btn-block my-4", type: "submit" %>

    <!-- Register -->
    <p>Not a member?
        <%= link_to 'Register', new_user_path %>
    </p>

    <!-- Social login -->

<% end %>
<!-- Default form login -->
</div>